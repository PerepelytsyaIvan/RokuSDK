<component name="VideoPlayer" extends="Group" initialFocus = "videoPlayer">
    <script type="text/brightscript" uri="./VideoPlayer.brs" />
    <script type="text/brightscript" uri="../Helpers/util.brs" />

    <interface>
        <field id="accountRoute" type="assocarray" onChange = "configureVideoContentNode"/>
        <field id="videoUrl" type="string"/>
    </interface>

    <children>
        <Video id="videoPlayer" translation = "[0,0]"/>
        <OverlayViewController id="overlayViewController"/>

        <Animation id="animation" duration="0.4" repeat="false">
            <FloatFieldInterpolator id="interpolator" key="[0.0, 1.0]" fieldToInterp="videoPlayer.height" />
        </Animation>
    </children>
</component>