<component name="PanelView" extends="Group">
    <script type="text/brightscript" uri="./PanelView.brs" />
    <script type="text/brightscript" uri="../NetworkManager/util.brs" />
    <script type="text/brightscript" uri="UIPanelViewConfigurator.brs" />

    <interface>
        <field id="videoPlayer" type="node" />
        <field id="accountRoute" type="assocarray" />
        <field id="runSDK" type="bool" alwaysNotify="true" onChange="setupSDK" />
    </interface>

    <children>
        <Group id="panel" translation="[0, 1080]">
            <Poster id="gradientPanel" width="1920" height="200" uri="pkg:/images/panelGradient.png" />
            <Poster id="backgroundPanel" width="1920" loadHeight="133" height="133" />
            <Poster id="logoPoster" translation="[60, 35]" width="80" height="80" />
            <Label id="questionLabel" text="label" vertAlign="center" color="#ffffff" />
            <Label id="timeLabel" translation="[1715, 30]" text="label" vertAlign="bottom" color="#ffffff" />
            <Poster id="separatorPoster" width="2" height="50" uri="pkg:/images/separatorGradient.png" />
            <Label id="secLabel" text="label" vertAlign="bottom" color="#ffffff" />
        </Group>

        <Group id = "rowListGroup">
            <RowList id="rowListLeftButton" translation="[1680, 100]" itemComponentName="TextItemComponent" vertFocusAnimationStyle="floatingFocus" drawFocusFeedbackOnTop="false" rowItemSpacing="[[5, 5]]" numRows="1" focusBitmapUri="pkg:/images/smallFocus.9.png" focusFootprintBitmapUri="nil" />
            <RowList id="rowList" itemComponentName="ContainerItemComponent" vertFocusAnimationStyle="floatingFocus" drawFocusFeedbackOnTop="false" rowItemSize="[[120, 35]]" itemSpacing="[15, 15]" rowItemSpacing="[[15, 15]]" numRows="1" focusBitmapUri="pkg:/images/focusButton.9.png" focusFootprintBitmapUri="nil" />    
        </Group>
       
        <Animation id="translationAnimation" duration="0.4" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="panelInterpolator" key="[0.0, 1.0]" fieldToInterp="panel.translation" />
            <Vector2DFieldInterpolator id="listsInterpolator" key="[0.0, 1.0]" fieldToInterp="rowListGroup.translation" />
        </Animation>

        <Animation id="translationGradientAnimation" duration="0.6" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="gradientInterpolator" key="[0.0, 1.0]" fieldToInterp="gradientPanel.translation" />
        </Animation>

        <Animation id="rowListAnimation" duration="0.6" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="rowListInterpolator" key="[0.0, 1.0]" fieldToInterp="rowList.itemSize" />
        </Animation>
    </children>
</component>