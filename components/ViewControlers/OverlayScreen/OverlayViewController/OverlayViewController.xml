<component name="OverlayViewController" extends="Group">
    <script type="text/brightscript" uri="./OverlayViewController.brs" />
    <script type="text/brightscript" uri="./OverlayViewControllerHelper.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/UrlHelpers.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />
    <script type="text/brightscript" uri="../../../Helpers/Promise.brs" />

    <interface>
        <field id="videoPlayer" type="node"/>
        <field id="accountRoute" type="assocarray" onChange = "configurationUser"/>
        <field id="setVideoFocus" type="bool"/>
        <field id="focusedMenu" type="bool" alwaysNotify = "true" onChange = "setFocusMenu"/>
        <field id="isShownActivity" type="bool"/>
        <field id="fonts" type="array" onChange = "configureFonts"/>
    </interface>

    <children>
        <SideBarView id = "sideBarView" />
        <Group id = "notificationGroup"/>

        <Animation id="translationAnimation" duration="0.3" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="iterpolator" key="[0.0, 1.0]" keyValue = "[[0, 0], [0, 0]]" fieldToInterp="notificationGroup.translation" />
        </Animation>
    </children>
</component>