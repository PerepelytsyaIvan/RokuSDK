<component name="TextItemComponent" extends="Group">
    <script type="text/brightscript" uri="TextItemComponent.brs" />
    <script type="text/brightscript" uri="../../Helpers/util.brs" />

    <interface>
        <field id="dataSource" type="assocarray" onChange="configureDataSource" />
        <field id="height" type="float"/>
        <field id="width" type="float"/>
        <field id="percentFocus" type="float" onChange = "onChangePercentFocus"/>
    </interface>

    <children>
        <Group id="itemComponentGroup">
            <LayoutGroup id = "layoutGroup" translation = "[10, 0]" layoutDirection = "horiz" itemSpacings = "[20, 0]">
                <Label id="titleLabel" horizAlign="left" vertAlign="center"/>
                <Rectangle id = "separator" width = "1" color = "#ffffff"/>
                <Rectangle id = "separator" width = "5" color = "#ffffff" visible = "false"/>
            </LayoutGroup>
        </Group>
    </children>
</component>