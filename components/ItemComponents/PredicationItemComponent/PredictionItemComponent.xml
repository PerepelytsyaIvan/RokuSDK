<component name="PredictionItemComponent" extends="Group">
    <script type="text/brightscript" uri="PredictionItemComponent.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />
    <script type="text/brightscript" uri="../../Helpers/utils/math.brs" />

    <interface>
        <field id="dataSource" type="assocarray" onChange="configureDataSource" />
        <field id="height" type="float"/>
        <field id="width" type="float"/>
        <field id="percentFocus" type="float" onChange = "onChangePercentFocus"/>
    </interface>

    <children>
        <Poster id="focusCell" opacity = "0" uri = "pkg:/images/gradienFocusButton.9.png"/>

        <LayoutGroup id = "containerView" itemSpacings = "[10]" vertAlignment = "center" layoutDirection = "horiz">
            <Poster id="pointsImage">
                <Label id="pointLabel" 
                    horizAlign="center" 
                    vertAlign="center"/>
            </Poster>

            <Poster id="posterCell"/>

            <Label id="titleLabel"
                horizAlign="left"
                vertAlign="center"/>
        </LayoutGroup>
    </children>
</component>