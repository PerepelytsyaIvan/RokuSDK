<component name="ButtonItemComponents" extends="Group">
    <script type="text/brightscript" uri="ButtonItemComponents.brs" />

    <interface>
        <field id="height" type="float" onChange="layoutSubviews" />
        <field id="width" type="float" onChange="layoutSubviews" />
        <field id="itemContent" type="node" onChange="OnItemContentChanged" />
        <field id="rowIndex" type="integer" />
        <field id="rowlistHasFocus" type="bool" onChange="itemFocusChanged" />
        <field id="focusPercent" type="float" onChange="itemFocusChanged"/>
        <field id="rowHasFocus" type="bool" onChange="itemFocusChanged" />
    </interface>

    <children>
        <Group id="itemComponentGroup">
            <Poster id="unFocused" loadDisplayMode="scaleToZoom" translation="[0, 0]"  uri="pkg:/images/unfocusedCell.png" />
            <Poster id="focusCell" loadDisplayMode="scaleToZoom" translation="[0, 0]" uri="pkg:/images/focusCell.png" opacity="0" />
            <Label id="titleLabel" translation="[5,5]" horizAlign="center" vertAlign="center"/>
            <ColorFieldInterpolator id = "titleColor" key="[0.0, 1.0]" keyValue="[ #ffffffff, #000000ff]" fieldToInterp="titleLabel.color"/>
        </Group>
    </children>
</component>