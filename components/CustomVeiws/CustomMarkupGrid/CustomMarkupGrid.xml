<component name="CustomMarkupGrid" extends="Group">
    <script type="text/brightscript" uri="CustomMarkupGrid.brs" />
    <script type="text/brightscript" uri="../../Helpers/util.brs" />

    <interface>
        <field id="dataSource" type="array" onChange = "configureDataSource" alwaysNotify = "true"/>
        <field id="item" type="assocarray"/>
        <field id="widthLayoutView" type="float"/>
        <field id="heightLayoutView" type="float"/>
        <field id="widthElement" type="float"/>
        <field id="sizeMask" type="float" alias = "maskGroup.maskSize"/>
        <field id="heightElement" type="float"/>
        <field id="itemSpacing" type="float" value = "20.0"/>
        <field id="focusImage" type = "string" alias = "focus.uri"/>
        <field id="elements" type="array"/>
        <field id = "indexPathFocused" type = "array" onChange = "jumpItem"/>
    </interface>

    <children>
        <Poster id="focus" uri = "pkg:/images/focusSubmit.9.png" opacity = "0"/> 
        <MaskGroup id="maskGroup" maskUri="pkg:/images/mask.png" maskSize = "[700, 215]">
            <Group id="baseGroup"/>
        </MaskGroup>

        <Animation id="translationAnimation" duration="0.2" easeFunction="linear">
            <Vector2DFieldInterpolator id="translationInterpolator" key="[0.0,1.0]" fieldToInterp="focus.translation"/>        
            <FloatFieldInterpolator id="widthInterpolator" key="[0.0,1.0]" fieldToInterp="focus.width"/>      
            <FloatFieldInterpolator id="heightInterpolator" key="[0.0,1.0]" fieldToInterp="focus.height"/>          
        </Animation>

        <Animation id="opacityFocus" duration="0.2" easeFunction="linear">
            <FloatFieldInterpolator id="opacityFocusInterpolator" key="[0.0,1.0]" fieldToInterp="focus.opacity"/>        
        </Animation>

        <Animation id="moveRowAnimation" duration="0.2" easeFunction="linear">
            <Vector2DFieldInterpolator id="moveRowInterpolator" key="[0.0,1.0]" fieldToInterp=""/>        
        </Animation>
    </children>
</component>
