<component name="PredicationSubmitView" extends="Group">
    <script type="text/brightscript" uri="PredicationSubmitView.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />

    <interface>
        <field id="dataSource" type="assocarray" onChange="configureDataSource" />
        <field id="height" type="float"/>
        <field id="width" type="float"/>
        <field id="percentFocus" type="float" onChange = "onChangePercentFocus"/>
        <field id="pressBack" type = "bool" alwaysNotify = "true"/>
        <field id="itemParam" type="assocarray"/>
        <field id="focusKey" type="int" onChange = "updateFocus" alwaysNotify = "true" value = "0"/>
        <field id="showNotificationPoints" type = "assocarray"/>
    </interface>

    <children>
        <Poster id="focusCounter"
                width="2" 
                height="100" 
                uri="pkg:/images/gradienFocusButton.9.png"/>

        <LayoutGroup id = "containerView" vertAlignment = "center" itemSpacings = "[15, 50, 10]" layoutDirection = "horiz">
            <Poster id = "posterCell" >
            </Poster>

            <Label id="titleLabel"
                color="#FF0000" 
                horizAlign="left"
                vertAlign="center">
            </Label>

            <Label id="counterLabel"
                height = "35"
                color="#FF0000" 
                horizAlign="right"
                vertAlign="center">
            </Label>

            <LayoutGroup id = "arrowContainer"  itemSpacings = "[20]">
                <Poster id = "topArrowPoster" 
                        width = "20" 
                        height = "15"
                        uri = "pkg:/images/top.png"/>

                <Poster id = "downArrowPoster" 
                        width = "20"
                        height = "15"
                        uri = "pkg:/images/down.png"/>
            </LayoutGroup>
        </LayoutGroup>


        <RowList    id = "rowList"
                    itemComponentName = "ItemComponent"
                    itemSize = "[100, 30]"
                    rowItemSize = "[[100, 30]]"
                    itemSpacing = "[0,10]"
                    rowItemSpacing = "[[0, 10]]"
                    focusBitmapUri = "pkg:/images/gradienFocusButton.9.png"
                    vertFocusAnimationStyle = "floatingFocus"
                    drawFocusFeedbackOnTop = "false"
                    numRows = "2"/>

        <Poster id="separator"
            width="2" 
            height="100" 
            uri="pkg:/images/separatorGradient.png">
        </Poster>
    </children>
</component>