<component name="IndicatorView" extends="Group">
    <script type="text/brightscript" uri="IndicatorView.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />

    <interface>
        <field id="width" type="integer" onChange = "layoutSubview" alias = "indicatorBackground.width" value = "0"/>
        <field id="height" type="integer" onChange = "layoutSubview" alias = "indicatorBackground.height" value = "0"/>
        <field id="widthIndicator" type="integer" alias = "indicator.width" value = "0"/>
        <field id="heightIndicator" type="integer" alias = "indicator.height" value = "0"/>
        <field id="percent" type="float" onChange = "changePercentScroll"/>
    </interface>

    <children>
        <Rectangle  id = "indicatorBackground" 
                    color = "#252525"/>

        <Rectangle  id = "indicator" 
                    color = "#606060"/>

        <Animation id="animation" duration="0.2" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="interpolatorTranslation" key="[0.0, 1.0]" fieldToInterp="indicator.translation" />
        </Animation>
    </children>
</component>