<component name="LevelsLabelView" extends="Group">
    <script type="text/brightscript" uri="LevelsLabelView.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />
    <script type="text/brightscript" uri="../../Helpers/utils/math.brs" />
    <interface>
        <field id="dataSource" type="assocarray" onChange = "configureDataSource" />
    </interface>

    <children>
        <LayoutGroup id = "levelGroup" layoutDirection="horiz" itemSpacings="[30]">
            <LayoutGroup id = "levelLabelGroup" layoutDirection="vert" itemSpacings="[5]">
                <Label id = "levelLabel"
                    horizAlign = "center">
                </Label>

                <Label id = "countLevelLabel"
                    horizAlign = "center">
                </Label>
            </LayoutGroup>

            <LayoutGroup id = "pointsLabelGroup"  layoutDirection="vert" itemSpacings="[5]">
                <Label id = "pointsLabel"
                    horizAlign = "center">
                </Label>

                <Label id = "countPointsLabel"
                    horizAlign = "center">
                </Label>
            </LayoutGroup>
        </LayoutGroup>
    </children>
</component>
