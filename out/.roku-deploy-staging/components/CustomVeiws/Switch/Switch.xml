<component name="Switch" extends="Group">
    <script type="text/brightscript" uri="Switch.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />

    <interface>
        <field id="title" type="string" alias = "titleLabel.text" onChange = "layoutSubview"/>
        <field id="isOn" type="bool" onChange = "includeSwitch"/>
        <field id="width" type="integer" onChange = "layoutSubview" value = "0"/>
        <field id="height" type="integer" onChange = "layoutSubview" value = "0"/>
        <field id="focus" type="bool" onChange = "focusedSwitch"/>
    </interface>

    <children>
        <Label  id = "titleLabel" 
                vertAlign = "center"
                horizAlign = "right"/>

        <Group id = "switchGroup">
            <Poster id = "backgroundSwitch" uri = "pkg:/images/backgroundSwitch.png" blendColor = "#39383Dff"/>
            <Poster id = "circleSwitch" uri = "pkg:/images/circleSwitch.png"/>
        </Group>

        <Poster id = "focus" 
                uri = "pkg:/images/focusSwitch.9.png" 
                visible = "false"/>

        <Animation id="animationSwitch" duration="0.2" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="interpolatorTranslation" key="[0.0, 1.0]" fieldToInterp="circleSwitch.translation" />
            <ColorFieldInterpolator id = "thumbColorIntrp" key="[0.0, 1.0]" keyValue="[#39383Dff, #40B729ff]" fieldToInterp="backgroundSwitch.blendColor"/>
        </Animation>
    </children>
</component>