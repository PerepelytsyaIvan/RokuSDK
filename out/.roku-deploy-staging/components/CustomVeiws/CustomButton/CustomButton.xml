<component name="CustomButton" extends="Group">
    <script type="text/brightscript" uri="CustomButton.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />

    <interface>
        <field id="text" type="string" alias="label.text" />
        <field id="focusedColor" type="string" alias="label.vertAlign" />
        <field id="activateButton" type="bool" onChange="activeButton" />
        <field id="focusButton" type="bool" onChange="setFocusButton" />
        <field id="selectButton" type="bool" alwaysNotify = "true"/>
    </interface>

    <children>
        <Poster id = "imageCell" opacity = "0.6"/>
        <Label  id = "label"
                vertAlign = "center"
                horizAlign = "center"/>

        <Animation id="buttonAnimation" duration="0.3" repeat="false" easeFunction="linear">
            <FloatFieldInterpolator id="buttonInterpolator" key="[0.0, 1.0]" fieldToInterp = "imageCell.opacity"/>
        </Animation>

        <Animation id="buttonScaleAnimation" duration="0.2" repeat="false" easeFunction="linear">
            <Vector2DFieldInterpolator id="buttonScaleInterpolator" key="[0.0, 1.0]" fieldToInterp = "imageCell.scale"/>
        </Animation>
    </children>
</component>