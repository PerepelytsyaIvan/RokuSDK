<component name="Toggle" extends="Group">
    <script type="text/brightscript" uri="Toggle.brs" />
    <script type="text/brightscript" uri="../../Helpers/util.brs"/>         

    <interface>
        <field id="isOn" type="boolean" value="false" onChange="valueChanged"/>        
        <field id="activeThumbColor" type="string" value="#ffffff" alias = "background.blendColor"/>        
        <field id="thumbColor" type="string" value="#BE2270ff"/>        
    </interface>

    <children>
        <Poster id="background" translation = "[3, 8]" uri="pkg:/images/toggleBack.png" width="50" height="15"/>
        <Poster id="thumb" uri="pkg:/images/toggleThumb.png" width="25" height="25" translation="[0,3]"/>

        <Animation id="toggleAnimation" easeFunction="linear" duration="0.2">
            <ColorFieldInterpolator id = "thumbColorIntrp" key="[0.0, 1.0]" keyValue="[ 0xCED2D5FF, #BE2270ff ]" fieldToInterp="thumb.blendColor"/>
            <Vector2DFieldInterpolator id = "thumbTranslationIntrp" key="[0.0, 1.0]" keyValue="[[0,3], [25, 0]]" fieldToInterp="thumb.translation"   />
        </Animation>

    </children>

</component>