<component name="PredicationSubmitView" extends="Group">
    <script type="text/brightscript" uri="PredicationSubmitView.brs" />
    <script type="text/brightscript" uri="../../Helpers/util.brs" />

    <interface>
        <field id="dataSource" type="assocarray" onChange="configureDataSource" />
        <field id="height" type="float"/>
        <field id="width" type="float"/>
        <field id="percentFocus" type="float" onChange = "onChangePercentFocus"/>
        <field id="pressBack" type = "bool"/>
        <field id="itemParam" type="assocarray"/>
        <function name ="showView"/>
    </interface>

    <children>
        <Group id = "containerView" translation = "[0, 0]">
            <Poster id = "posterCell" >
            </Poster>

            <Label id="titleLabel"
                color="#FF0000" 
                horizAlign="left"
                vertAlign="center">
            </Label>

            <Label id="counterLabel"
                height = "35"
                color="#FF0000" 
                horizAlign="left"
                vertAlign="center">
            </Label>

            <CollectionView id="collectionView" 
                size="[200, 120]" 
                widthLayoutView="175"
                itemSpacing = "10"
                focusImage = "pkg:/images/focusSubmit.9.png">
            </CollectionView>
        </Group>

        <Poster id="separator"
            width="2" 
            height="100" 
            uri="pkg:/images/separatorGradient.png">
        </Poster>

        <Animation id="animationView" duration="0.2" repeat="false" easeFunction="linear">
            <FloatFieldInterpolator id="animationInterpolator" key="[0.0, 1.0]" fieldToInterp="PredicationSubmitView.opacity" />
        </Animation>
    </children>
</component>