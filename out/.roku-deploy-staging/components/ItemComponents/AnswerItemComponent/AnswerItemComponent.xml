<component name="AnswerItemComponent" extends="Group">
    <script type="text/brightscript" uri="AnswerItemComponent.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />

    <interface>
        <field id="itemContent" type="node" onChange="configureDataSource" />
        <field id="height" type="float" />
        <field id="width" type="float" />
        <field id="widthElement" type="float" />
        <field id="heightElement" type="float" />
        <field id="focusPercent" type="float" onChange="onChangePercentFocus" />
    </interface>


    <children>
        <Poster id="imageCell" />

        <LayoutGroup id="layoutGroup" translation="[0,0]" layoutDirection="vert" itemSpacings="[2]">
            <Label id="percentLabelLabel" horizAlign="left" vertAlign="center" color="#cc0000" />
            <Label id="titleLabel" horizAlign="left" vertAlign="center" color="#cc0000" />
        </LayoutGroup>
    </children>
</component>