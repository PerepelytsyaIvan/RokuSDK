<component name="PredictionItemComponent" extends="Group">
    <script type="text/brightscript" uri="PredictionItemComponent.brs" />
    <script type="text/brightscript" uri="pkg:/components/Helpers/util.brs" />

    <interface>
        <field id="dataSource" type="assocarray" onChange="configureDataSource" />
        <field id="height" type="float"/>
        <field id="width" type="float"/>
        <field id="percentFocus" type="float" onChange = "onChangePercentFocus"/>
    </interface>

    <children>
        <Group id="itemComponentGroup">
            <Poster id="posterCell">
            </Poster>

            <Label id="pointLabel" 
                horizAlign="center" 
                vertAlign="top">
            </Label>

            <Label id="ptsLabel" 
                horizAlign="center" 
                vertAlign="top">
            </Label>

            <Label id="titleLabel" 
                horizAlign="center" 
                vertAlign="center">
            </Label>
        </Group>
    </children>
</component>