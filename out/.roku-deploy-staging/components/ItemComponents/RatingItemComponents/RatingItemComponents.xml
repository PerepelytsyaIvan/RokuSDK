<component name="RatingItemComponents" extends="Group">
    <script type="text/brightscript" uri="RatingItemComponents.brs" />
    <script type="text/brightscript" uri="../../Helpers/util.brs" />

    <interface>
        <field id="dataSource" type="assocarray" onChange="configureDataSource" />
        <field id="height" type="float"/>
        <field id="width" type="float"/>
        <field id="percentFocus" type="float" onChange = "onChangePercentFocus"/>
    </interface>


    <children>
        <Group id="itemComponentGroup">
            <Poster id = "focusPoster"
                uri = "pkg:/images/ratingFocus.9.png">
            </Poster>

            <LayoutGroup id = "ratingLayout"
                itemSpacings = "[5]"
                layoutDirection = "horiz">
            </LayoutGroup>
        </Group>

        <FloatFieldInterpolator id = "focusedInterpolator" key="[0.0, 1.0]" keyValue="[1.0, 0.6]" fieldToInterp="itemComponentGroup.opacity"/>
    </children>
</component>