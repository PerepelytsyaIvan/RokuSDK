<component name="RatingItemComponents" extends="Group">
    <script type="text/brightscript" uri="RatingItemComponents.brs" />
    <script type="text/brightscript" uri="../../Helpers/util.brs" />

    <interface>
        <field id="height" type="float" onChange="layoutSubviews" />
        <field id="width" type="float" onChange="layoutSubviews" />
        <field id="title" type="string" onChange="OnItemContentChanged" />
        <field id="focused" type = "bool" onChange = "setFocusView"/>
        <field id="image" type="string"/>
    </interface>

    <children>
        <Group id="itemComponentGroup">
            <Poster id = "focused" uri = "pkg:/images/ratingUfocus.png" />
            <Poster id = "rating" width = "20" height = "20"/>
        </Group>

        <Animation id="focusedAnimation" duration="0.3" easeFunction="linear">
            <ColorFieldInterpolator id = "focusedColor" key="[0.0, 1.0]" keyValue="[#f6fe00ff, #FED500ff]" fieldToInterp="focused.blend"/>
        </Animation>
    </children>
</component>